<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
    >


  <g:HTMLPanel addStyleNames="button-sample">

    <style is="custom-style">
      .button-sample .horizontal-section {
      min-width: 130px;
      }

      .pic {
      width: 100%;
      }
    </style>

    <div class="horizontal-section-container  center-justified layout">
      <h3>Camera Sample</h3>

      <p:PaperMaterial elevation="2">
        <div class="horizontal-section">
        <p:PaperItem>
            <p:PaperButton ui:field="cameraButton" raised="true">take a picture</p:PaperButton>
        </p:PaperItem>
          <p:PaperItem>
            <span ui:field="text"></span>
          </p:PaperItem>
          <p:PaperItem>
          <img class="pic" ui:field="myImage"/>
          </p:PaperItem>
        </div>
      </p:PaperMaterial>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
